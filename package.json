{
  "name": "@blockfrost/blockfrost-websocket-link",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "yarn clean && babel ./src --out-dir dist --copy-files --extensions '.ts'",
    "start": "yarn build && node dist/server.js",
    "dev": "ts-node-dev ./src/server.ts",
    "test": "nyc ava",
    "lint": "eslint ./src/**/*.ts",
    "type-check": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "0.0.6",
    "@emurgo/cardano-serialization-lib-nodejs": "^6.0.0",
    "@types/express": "^4.17.11",
    "bignumber.js": "9.0.1",
    "bottleneck": "^2.19.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "rimraf": "^3.0.2",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/ws": "^7.4.0",
    "ava": "^3.15.0",
    "eslint": "^7.23.0",
    "nyc": "^15.1.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "ava": {
    "files": [
      "test/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "failWithoutAssertions": false
  }
}
